@@ -280,7 +280,6 @@ static bool damos_action_valid(int action)
 	case DAMOS_PAGEOUT:
 	case DAMOS_HUGEPAGE:
 	case DAMOS_NOHUGEPAGE:
-	case DAMOS_STAT:
 		return true;
 	default:
 		return false;
